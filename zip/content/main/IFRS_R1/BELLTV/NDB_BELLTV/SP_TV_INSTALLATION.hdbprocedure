 				 	 "ADJ_ENTR_REF",
 				 	 "ENTR_REF_NUM",
 				 	 "CYCL_ID",
 				 	 "DSCT_CD",
 				 	 "DSCT_AMT",
 				 	 "PRE_DSCT_CHRG",
 				 	 "BILL_CYCL",
