 				 	 "PRE_DSCT_CHRG",
 				 	 "BILL_CYCL",
 				 	 "CUST_ST",
 				 	 "TERM_IND",
 				 	 "PRODUCT_TYPE",
 				 	 "NETWK_TY",
 				 	 "CUST_TY",
 				 	 "BILL_CD",
 				 	 "REVENUE_CD",
 				 	 "INSTALL_NUM",
 				 	 "EXTR_TM",
 				 	 "SYS_NUM",
 				 	 "SRC_TS",
 				 	 "KUNNR_SID",
 				 	 "INSERT_TS") 
					 VALUES (
					 C_INSTALL."EXTR_DT",
 				 	 C_INSTALL."ACCT_NUM",
 				 	 C_INSTALL."PRIN_NUM",
 				 	 C_INSTALL."AGNT_NUM",
 				 	 C_INSTALL."TRAN_CD",
 				 	 C_INSTALL."SERVICE_CD",
 				 	 C_INSTALL."ADJ_RSN_CD",
 				 	 C_INSTALL."TRANS_DT",
 				 	 C_INSTALL."POST_DT",
 				 	 C_INSTALL."AUDT_TRL_DT",
 				 	 C_INSTALL."CO_CD",
 				 	 C_INSTALL."CONTR_END_DT",
 				 	 C_INSTALL."CONTR_STRT_DT",
 				 	 C_INSTALL."CONTR_TERM",
 				 	 C_INSTALL."CONTR_TY",
 				 	 C_INSTALL."AMT",
 				 	 C_INSTALL."VTG_ROW_ID",
 				 	 C_INSTALL."ADJ_ENTR_REF",
 				 	 C_INSTALL."ENTR_REF_NUM",
 				 	 C_INSTALL."CYCL_ID",
 				 	 C_INSTALL."DSCT_CD",
 				 	 C_INSTALL."DSCT_AMT",
 				 	 C_INSTALL."PRE_DSCT_CHRG",
 				 	 C_INSTALL."BILL_CYCL",
 				 	 C_INSTALL."CUST_ST",
 				 	 C_INSTALL."TERM_IND",
 				 	 C_INSTALL."PRODUCT_TYPE",
 				 	 C_INSTALL."NETWK_TY",
 				 	 C_INSTALL."CUST_TY",
 				 	 C_INSTALL."BILL_CD",
 				 	 C_INSTALL."REVENUE_CD",
 				 	 C_INSTALL."INSTALL_NUM",
 				 	 C_INSTALL."EXTR_TM",
 				 	 C_INSTALL."SYS_NUM",
 				 	 C_INSTALL."SRC_TS",
 				 	 C_INSTALL."KUNNR_SID",
 				 	 LV_CUR_UTC
					 ); 
             	
                         	
            					 
--         Insert PK of successfully processed Records into Local Temp Tables 
--         for Updating NDB_TS in corresponding Landing Tables records
		    INSERT INTO #UPDATE_TV_CUST 
					   ("ACCT_NUM",
					    "EXTR_DT",
					    "VTG_ROW_ID",
					    "TRAN_CD",
					    "POST_DT") 
			    VALUES (C_INSTALL."ACCT_NUM",
			            C_INSTALL."EXTR_DT",
					    C_INSTALL."VTG_ROW_ID",
					    C_INSTALL."TRAN_CD",
					    C_INSTALL."POST_DT");
					   					   	    		
		   INSERT INTO #UPDATE_EH_DELETION
					   ("ACCT_NUM",
					    "EXTR_DT",
					    "VTG_ROW_ID") 
			    VALUES (C_INSTALL."ACCT_NUM",
					    C_INSTALL."EXTR_DT",
					    C_INSTALL."VTG_ROW_ID");  
					   	 


 
 END IF;

END FOR;					   			    

--------------------------------------------------------------------------------------------------
-- Update Landing Tables
-------------------------------------------------------------------------------------------------- 

 	   UPDATE "LAND"."IFRS_R1.LAND::TV_MON_TRAN_BASE"  A 
	     FROM "LAND"."IFRS_R1.LAND::TV_MON_TRAN_BASE"  A
   INNER JOIN #UPDATE_TV_CUST  B
	       ON A."SUB_ACCT_NUM"	 	=	 	B."ACCT_NUM"
	      AND A."EXTR_DT"           =       B."EXTR_DT"
	      AND A."VTG_ROW_ID"        =       B."VTG_ROW_ID"
	      AND A."TRAN_CD"           =       B."TRAN_CD"
	      AND A."POST_DT"           =       B."POST_DT"
		  SET NDB_TS                =       LV_CUR_UTC
		WHERE NDB_TS IS NULL;
 	   
 	   UPDATE "NDB_TV"."IFRS_R1.BELLTV.NDB_BELLTV::TV_CUSTOMER"  A 
	     FROM "NDB_TV"."IFRS_R1.BELLTV.NDB_BELLTV::TV_CUSTOMER"  A
   INNER JOIN #UPDATE_TV_CUST  B
	       ON A."ACCT_NUM"          =       B."ACCT_NUM"
		  SET INST_CHRG_IND         =       'X'
		WHERE INST_CHRG_IND IS NULL; 
								
--------------------------------------------------------------------------------------------------
-- Update Error Table
--------------------------------------------------------------------------------------------------

      UPDATE "NDB_TV"."IFRS_R1.BELLTV.NDB_BELLTV::TV_TRANSACTIONS_EH" A
  	    FROM "NDB_TV"."IFRS_R1.BELLTV.NDB_BELLTV::TV_TRANSACTIONS_EH" A 
  INNER JOIN #UPDATE_EH_DELETION B
          ON A."ACCT_NUM"           =       B."ACCT_NUM"
	     AND A."EXTR_DT"            =       B."EXTR_DT"
	     AND A."VTG_ROW_ID"         =       B."VTG_ROW_ID"
	     AND A."VIRTUAL_IND" IS NULL
   	     SET (DELETE_DATE, DELETED) =       (LV_CUR_UTC, 1);

--------------------------------------------------------------------------------------------------
-- Set Overall Status
-------------------------------------------------------------------------------------------------- 

--  STATUS 0: Send the success message to scheduling tool to confirm this procedure has been
--  executed successfully
    IF(LV_ERROR_FLAG = 'Y') THEN		

     OP_STATUS := LC_ERROR_TEXT; 
			
    ELSE

  	 OP_STATUS := LC_SUCCESS_TEXT; 	
				
	END IF;
	

END; 
