 				 	 C_INSTALL."BILL_CYCL",
 				 	 C_INSTALL."CUST_ST",
 				 	 C_INSTALL."TERM_IND",
 				 	 C_INSTALL."PRODUCT_TYPE",
 				 	 C_INSTALL."NETWK_TY",
 				 	 C_INSTALL."CUST_TY",
 				 	 C_INSTALL."BILL_CD",
 				 	 C_INSTALL."REVENUE_CD",
