--------------------------------------------------------------------------------------------------
-- Update Landing Tables
-------------------------------------------------------------------------------------------------- 

-- Update Landing Table IFRS_R1.LAND::P77_TRANS_DISCGL                                                           
   UPDATE "LAND"."IFRS_R1.LAND::P77_TRANS_DISCGL"  A
     FROM "LAND"."IFRS_R1.LAND::P77_TRANS_DISCGL"  A
    INNER JOIN #UPDATE_P77_DSCGL B
      ON    A."TRANS_ID"        	=    B."TRANS_ID"
      AND    A."TRANS_LINE_ID"   	=    B."TRANS_LINE_ID"
      AND    A."DOC_NUM"         	=    B."DSCT_REV_DOC_NUM"
      AND    A."POST_DT"         	=    B."DSCT_POSTING_DT"
      AND    A."GL_ACCT_NUM"     	=    B."DSCT_GL_ACT_NUM"
      AND    A."SRC_FILE"        	=    B."SRC_FILE"
      AND    A."CYCL_ID"         	=    B."CYCLE_NUM"                
      AND    A."DISCGL_PRIMARY_KEY" =    B."DISCGL_PRIMARY_KEY" 
	  SET    DISCGL_TS              =    LV_CUR_UTC
    WHERE    A.DISCGL_TS IS NULL;

