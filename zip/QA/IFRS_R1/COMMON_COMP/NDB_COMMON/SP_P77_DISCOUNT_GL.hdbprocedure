   UPDATE "NDB_COMMON"."IFRS_R1.COMMON_COMP.NDB_COMMON::P77_DISCOUNT_GL_EH" A
     FROM "NDB_COMMON"."IFRS_R1.COMMON_COMP.NDB_COMMON::P77_DISCOUNT_GL_EH" A 
    INNER JOIN #UPDATE_EH_DELETION B
       ON    A."TRANS_ID"                =    B."TRANS_ID"
      AND    A."TRANS_LINE_ID"           =    B."TRANS_LINE_ID"
      AND    A."DSCT_REV_DOC_NUM"        =    B."DSCT_REV_DOC_NUM"  
      SET   (DELETE_DATE, DELETED)       =    (CURRENT_DATE, 1); 
      
